<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ac_sdk_qr_viewer_vg_main">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ac_sdk_qr_viewer_footer"
        android:id="@+id/ac_sdk_qr_viewer_vg_body">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ac_sdk_qr_viewer_tv_description"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/ac_sdk_qr_viewer_iv_qr"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/ac_sdk_qr_viewer_iv_qr"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/ac_sdk_qr_viewer_tv_kid"
            android:layout_below="@id/ac_sdk_qr_viewer_iv_qr"/>
    </RelativeLayout>
<com.digt.sdk.ui.components.SdkButtonFooter
    android:layout_width="match_parent"
    android:layout_height="@dimen/sdk_footer_height"
    android:id="@+id/ac_sdk_qr_viewer_footer"
    android:layout_alignParentBottom="true"/>
</RelativeLayout>