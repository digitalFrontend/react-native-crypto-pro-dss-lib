<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="450dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ac_sdk_security_warning_header">
        <TextView
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ac_sdk_security_warning_tv_header"
            android:text="Заголовок"
            android:maxLines="4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.1"
        android:id="@+id/ac_sdk_security_warning_vg_main"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ac_sdk_security_warning_vg_security_message" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.1">
            <ListView
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ac_sdk_security_warning_lv_overlay" />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ac_sdk_security_warning_vg_security_results" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ac_sdk_security_warning_vg_choice">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ac_sdk_security_warning_tv_save_choice"
                android:layout_alignParentStart="true"
                android:text="Сохранить выбор" />
            <Switch
                android:layout_alignParentEnd="true"
                android:layout_alignBaseline="@id/ac_sdk_security_warning_tv_save_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ac_sdk_security_warning_switch_save_choice"/>
        </RelativeLayout>

    </LinearLayout>
    <com.digt.sdk.ui.components.SdkButtonsFooter
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/ac_sdk_security_warning_footer"/>
</LinearLayout>
