<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ac_sdk_profile_vg_main">
    <ListView
        android:id="@+id/ac_sdk_profile_lv_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ac_sdk_profile_footer"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:dividerHeight="1dp" />
    <LinearLayout
        android:id="@+id/ac_sdk_profile_footer"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/tablet_view_width"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_height="@dimen/sdk_footer_height"/>
</RelativeLayout>