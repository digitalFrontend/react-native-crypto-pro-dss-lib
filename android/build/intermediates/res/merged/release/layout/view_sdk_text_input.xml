<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_sdk_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_sdk_text_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="4dp" />

        <EditText
            android:id="@+id/view_sdk_text_input_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingEnd="4dp"
            android:paddingBottom="5dp"
            android:textAlignment="textStart" />

        <LinearLayout
            android:id="@+id/view_sdk_text_input_bot_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_sdk_text_input_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"/>
    <!--    <TextView
            android:id="@+id/view_sdk_text_input_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="4dp"/>
        <TextView
            android:id="@+id/view_sdk_text_input_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="4dp"/>-->
</LinearLayout>