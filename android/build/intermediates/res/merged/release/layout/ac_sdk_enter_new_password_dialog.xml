<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ac_sdk_enter_new_password_dialog_vg_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ac_sdk_enter_new_password_dialog_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:visibility="invisible"
        android:paddingStart="16dp"
        android:paddingEnd="4dp"
        />

    <LinearLayout
        android:id="@+id/ac_sdk_enter_new_password_dialog_edit_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" />

    <com.digt.sdk.ui.components.SdkButtonFooter
        android:id="@+id/ac_sdk_enter_new_password_dialog_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sdk_footer_height"
        android:layout_alignParentBottom="true" />

</RelativeLayout>