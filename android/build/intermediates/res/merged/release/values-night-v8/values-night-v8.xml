<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <style name="CryptoPro.AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_brand_light_blue</item>
        <item name="colorPrimaryVariant">@color/night_brand_dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_brand_light_blue</item>
        <item name="colorSecondaryVariant">@color/night_brand_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here.-->
        <item name="colorSurface">@color/night_brand_color_surface</item>
        <item name="android:colorBackground">@color/night_brand_color_background</item>
        <item name="toolbarStyle">@style/CryptoPro.Widget.Toolbar</item>
        <item name="navigationViewStyle">@style/CryptoPro.Widget.NavigationView</item>
        <item name="snackbarTextViewStyle">@style/CryptoPro.Snackbar</item>
    </style>
    <style name="CryptoPro.AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>
    <style name="CryptoPro.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CryptoPro.AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>
    <style name="CryptoPro.AppTheme.Transparent" parent="CryptoPro.AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="CryptoPro.AppTheme.Transparent.NoFloatingWindow" parent="CryptoPro.AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="CryptoPro.Snackbar" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">5</item>
    </style>
    <style name="CryptoPro.ThemeOverlay.NavigationView" parent="">
        <item name="colorPrimary">@color/night_brand_blue</item>
        <item name="colorSecondaryVariant">@color/night_brand_light_blue</item>
    </style>
    <style name="CryptoPro.ThemeOverlay.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="colorPrimary">?attr/colorSurface</item>
    </style>
    <style name="CryptoPro.Widget.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="materialThemeOverlay">@style/CryptoPro.ThemeOverlay.NavigationView</item>
    </style>
    <style name="CryptoPro.Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="materialThemeOverlay">@style/CryptoPro.ThemeOverlay.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>
    <style name="Theme.AppCompat.DayNight" parent="Theme.AppCompat"/>
    <style name="Theme.AppCompat.DayNight.DarkActionBar" parent="Theme.AppCompat"/>
    <style name="Theme.AppCompat.DayNight.Dialog" parent="Theme.AppCompat.Dialog"/>
